<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/try_table_height"
    android:layout_marginTop="@dimen/space_large"
    android:padding="@dimen/space_normal"
    android:background="@drawable/bg_light">

    <LinearLayout
        android:id="@+id/viewTrayTable1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_weight="1">

        <TextView
            android:id="@+id/tvName"
            android:text="@string/dash_3"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_head"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/space_normal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/imgRemove"
            android:textColor="@color/textSecondary"
            android:textSize="@dimen/text_title"
            android:layout_marginStart="@dimen/space_normal"
            android:src="@drawable/ic_close_small"
            android:layout_width="@dimen/size_normal"
            android:layout_height="@dimen/size_normal"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

